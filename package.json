{
  "name": "slp-enforcer",
  "version": "2.0.0",
  "description": "Finds violations of the Melee Controller Ruleset by inspecting SLP files (WASM-powered)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/pkg/node"
  ],
  "scripts": {
    "build:wasm:node": "cd libenforcer-wasm && wasm-pack build --target nodejs --out-dir ../pkg/node --release",
    "build:wasm:web": "cd libenforcer-wasm && wasm-pack build --target web --out-dir ../pkg/web --release",
    "build:wasm": "npm run build:wasm:node && npm run build:wasm:web",
    "build:ts": "tsc",
    "build": "npm run build:wasm:node && npm run build:ts",
    "test": "node --experimental-vm-modules --experimental-wasm-reftypes node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules --experimental-wasm-reftypes node_modules/jest/bin/jest.js --watch",
    "test:debug": "node --experimental-vm-modules --experimental-wasm-reftypes node_modules/jest/bin/jest.js --runInBand",
    "test:rust": "cd libenforcer-wasm && cargo test --target x86_64-unknown-linux-gnu",
    "test:all": "npm run test:rust && npm run test",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altf4/enforcer.git"
  },
  "keywords": [
    "slippi",
    "slp",
    "cheat",
    "wasm"
  ],
  "author": "altf4",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/altf4/enforcer/issues"
  },
  "homepage": "https://github.com/altf4/enforcer#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.2",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
